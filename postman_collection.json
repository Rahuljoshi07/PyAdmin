{
    "info": {
        "name": "REST API Backend",
        "description": "Collection for testing REST API endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Users",
            "item": [
                {
                    "name": "Get All Users",
                    "request": {
                        "method": "GET",
                        "url": "http://localhost:5000/api/users"
                    }
                },
                {
                    "name": "Get User by ID",
                    "request": {
                        "method": "GET",
                        "url": "http://localhost:5000/api/users/1"
                    }
                },
                {
                    "name": "Create User",
                    "request": {
                        "method": "POST",
                        "url": "http://localhost:5000/api/users",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"john_doe\",\n    \"email\": \"john@example.com\"\n}"
                        }
                    }
                },
                {
                    "name": "Update User",
                    "request": {
                        "method": "PUT",
                        "url": "http://localhost:5000/api/users/1",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"john_updated\",\n    \"email\": \"john.updated@example.com\"\n}"
                        }
                    }
                },
                {
                    "name": "Delete User",
                    "request": {
                        "method": "DELETE",
                        "url": "http://localhost:5000/api/users/1"
                    }
                }
            ]
        },
        {
            "name": "Products",
            "item": [
                {
                    "name": "Get All Products",
                    "request": {
                        "method": "GET",
                        "url": "http://localhost:5000/api/products"
                    }
                },
                {
                    "name": "Get Product by ID",
                    "request": {
                        "method": "GET",
                        "url": "http://localhost:5000/api/products/1"
                    }
                },
                {
                    "name": "Create Product",
                    "request": {
                        "method": "POST",
                        "url": "http://localhost:5000/api/products",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Laptop\",\n    \"description\": \"High-performance laptop\",\n    \"price\": 999.99,\n    \"quantity\": 10\n}"
                        }
                    }
                },
                {
                    "name": "Update Product",
                    "request": {
                        "method": "PUT",
                        "url": "http://localhost:5000/api/products/1",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Gaming Laptop\",\n    \"price\": 1299.99,\n    \"quantity\": 5\n}"
                        }
                    }
                },
                {
                    "name": "Delete Product",
                    "request": {
                        "method": "DELETE",
                        "url": "http://localhost:5000/api/products/1"
                    }
                }
            ]
        }
    ]
}
